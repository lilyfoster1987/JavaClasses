package com.rewievstringmanipulations;

public class SubStringDemo {
	public static void main(String[] args) {
		
	
		
	
		String a="i am very happy today, because today is not Monday";
		String b=a.substring(10);
		System.out.println(b);
		
		System.out.println(a.substring(10,15));
		//System.out.println(a.substring(10,56));	it gives error
		
		String c="zeynepzeyneppp";
		
		char[] array=c.toCharArray();
		
		for (int i=0; i<array.length; i++) {
			for(int j=1; j<array.length; j++) {
			
			if (array[i]==array[j]) {
				
				System.out.print(array[i]);
				
			}
		}}
	}

}
