package com.array;

public class Repl {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		 for(int i=1; i<=5; i++)
			    
		    {
		     
		      for(int j=0; j<i; j++){
		    	  for(int k=4; k>=1; k--) {
		    		  
		    		  System.out.print(" "+ i);
		    		
		    	  }
		       
		      }
		      System.out.println();
		      
		    }
		 
		 int a =0;
		    // start you code here
		    while(a<=8){
		      
		      System.out.println(a);
		      a++;
		    }
		    
	}

}
