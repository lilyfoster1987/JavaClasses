		int [] array= {12,32,45,85,78,96};

		
		int max=0;

		int secondLargest=0;
		for(int i=0; i<array.length; i++) {
			
			if (array[i]>max) {
				
			max=array[i];
			}
			
			
		}


		System.out.println("max number is "+ max);
		System.out.println("second maximum number is "+ secondLargest);


			System.out.println("*********************************");
			
			for(int j=0; j<array.length; j++) {
			
			if(array[j]<max) {
				secondLargest=array[j];
				
				
			}
	
			
			
			}
			}
			
			
			
			
			

